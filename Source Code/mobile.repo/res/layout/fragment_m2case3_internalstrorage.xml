<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:paddingBottom="30dp"
            android:paddingTop="26dp"
            android:text="Case 3\nInternal Storage - Mode World"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@android:color/holo_red_dark"
            android:textStyle="bold"
            android:typeface="serif" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp" >

            <TextView
                android:id="@+id/textView2"
                android:layout_width="115dp"
                android:layout_height="match_parent"
                android:gravity="left|center"
                android:paddingLeft="10dp"
                android:text="My User:"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@android:color/white"
                android:typeface="serif" />

            <com.hptsec.vulnlab.CustomControl.MyEditText
                android:id="@+id/txtC3Username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:ems="10"
                android:gravity="left|center_vertical"
                android:hint="Your user"
                android:paddingLeft="10dp"
                android:typeface="serif"
                android:singleLine="true" >

                <requestFocus />
            </com.hptsec.vulnlab.CustomControl.MyEditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp" >

            <TextView
                android:id="@+id/TextView01"
                android:layout_width="115dp"
                android:layout_height="match_parent"
                android:gravity="left|center"
                android:paddingLeft="10dp"
                android:text="My Pass:"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@android:color/white"
                android:typeface="serif" />

            <com.hptsec.vulnlab.CustomControl.MyEditText
                android:id="@+id/txtC3Password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:ems="10"
                android:gravity="left|center_vertical"
                android:hint="Your password"
                android:inputType="textPassword"
                android:paddingLeft="10dp"
                android:typeface="serif"
                android:singleLine="true" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/btnC3SaveInternal"
                style="@style/btnStyleOrange"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingTop="10dp"
                android:text="Save Internal (r/w)"
                android:textSize="15sp"
                android:textStyle="normal"
                android:typeface="serif" />

            <Button
                android:id="@+id/btnC3SaveCacheFile"
                style="@style/btnStyleOrange"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingTop="10dp"
                android:text="Save Cache"
                android:textStyle="normal"
                android:typeface="serif" />
        </LinearLayout>

        <TextView
            android:id="@+id/txtC3Result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="5dp" />

        <TextView
            android:id="@+id/txtC3VulnDescription"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center|fill_vertical"
            android:paddingTop="10dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/black" />
    </LinearLayout>

</ScrollView>